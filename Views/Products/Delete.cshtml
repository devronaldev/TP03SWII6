<div class="container mt-4">
    <h1 class="text-center mb-4">Deletar Produto</h1>

    <h3 class="text-danger">Tem certeza que deseja deletar este produto?</h3>
    <div>
        <h4 class="text-purple">@Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Preço
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Quantidade
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4" id="deleteForm">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Deletar" class="btn btn-danger mr-2" onclick="return confirmDelete()" />
                <a asp-action="Index" class="btn btn-purple text-white">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

<style>
    .text-purple {
        color: #6f42c1; /* Cor roxa */
    }

    .btn-purple {
        background-color: #6f42c1; /* Cor roxa */
        border-color: #6f42c1; /* Cor roxa */
    }

        .btn-purple:hover {
            background-color: #563d7a; /* Cor roxa escura no hover */
            border-color: #563d7a; /* Cor roxa escura no hover */
        }
</style>

<script>
    function confirmDelete() {
        return confirm("Você tem certeza que deseja deletar este produto? Essa ação não pode ser desfeita.");
    }
</script>
