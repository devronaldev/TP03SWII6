<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Produto</h1>

    <h4 class="text-purple">Informações do Produto</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" id="productForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome</label>
                    <input asp-for="Name" class="form-control" placeholder="Digite o nome do produto" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Preço</label>
                    <input asp-for="Price" class="form-control" id="Price" placeholder="Digite o preço do produto" oninput="this.value = this.value.replace('.', ',')" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Quantidade</label>
                    <input asp-for="Quantity" class="form-control" placeholder="Digite a quantidade" min="0"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-purple text-white mr-2" />
                    <a asp-action="Index" class="btn btn-secondary" onclick="return confirmBack()">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Substitui vírgula por ponto no campo de preço antes de enviar o formulário
    document.getElementById('productForm').onsubmit = function () {
        var priceInput = document.getElementById('Price');
        var priceValue = priceInput.value.replace(',', '.');
        
        if (isNaN(priceValue) || priceValue <= 0) {
            alert("Por favor, insira um preço válido.");
            return false;
        }
        return true;
    };

    // Confirmação ao voltar
    function confirmBack() {
        return confirm("Se você voltar, todas as informações preenchidas serão perdidas. Deseja continuar?");
    }
</script>

<style>
    .text-purple {
        color: #6f42c1; /* Cor roxa */
    }

    .btn-purple {
        background-color: #6f42c1; /* Cor roxa */
        border-color: #6f42c1; /* Cor roxa */
    }

        .btn-purple:hover {
            background-color: #563d7a; /* Cor roxa escura no hover */
            border-color: #563d7a; /* Cor roxa escura no hover */
        }

    .form-group {
        margin-bottom: 1.5rem; /* Aumenta o espaçamento entre os inputs */
    }
</style>
