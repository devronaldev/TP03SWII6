<div class="container mt-4">
    <h1 class="text-center mb-4">Criar Novo Produto</h1>

    <h4 class="text-purple">Informações do Produto</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" id="productForm" onsubmit="return validateForm()">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome</label>
                    <input asp-for="Name" class="form-control" placeholder="Digite o nome do produto" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Preço</label>
                    <input asp-for="Price" class="form-control" id="Price" placeholder="Digite o preço do produto" min="0" oninput="this.value = this.value.replace('.', ',')" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Quantidade</label>
                    <input asp-for="Quantity" class="form-control" placeholder="Digite a quantidade" min="0"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <div class="btn-group" role="group" aria-label="Botões de Ação">
                        <input type="submit" value="Criar" class="btn btn-purple text-white" />
                        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Função de validação do formulário
    function validateForm() {
        var priceInput = document.getElementById('Price');
        var priceValue = priceInput.value.replace(',', '.');

        if (isNaN(priceValue) || priceValue <= 0) {
            alert("Por favor, insira um preço válido.");
            return false; 
        }
        return true; 
    }
</script>

<style>
    .text-purple {
        color: #6f42c1; /* Cor roxa */
    }

    .btn-purple {
        background-color: #6f42c1; /* Cor roxa */
        border-color: #6f42c1; /* Cor roxa */
    }

    .btn-purple:hover {
        background-color: #563d7a; /* Cor roxa escura no hover */
        border-color: #563d7a; /* Cor roxa escura no hover */
    }

    .btn-group .btn {
        margin-right: 10px; /* Espaçamento entre os botões */
    }

    .btn-group .btn:last-child {
        margin-right: 0; /* Remove margem do último botão */
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
