@model IEnumerable<TP03SWII6.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <!-- Link do Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        body {
            background-color: #f8f9fa; /* Cinza suave para o fundo */
        }

        h1 {
            color: #6f42c1; /* Roxo */
            font-weight: 700;
            text-align: center;
            margin-bottom: 20px;
        }

        .table thead th {
            color: #6f42c1; /* Roxo nos títulos da tabela */
            font-weight: 600;
        }

        .table-hover tbody tr:hover {
            background-color: #f0e6f8; /* Fundo roxo muito suave no hover das linhas */
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

        .btn-primary:hover {
            background-color: #5a0e8b; /* Roxo mais escuro no hover */
            border-color: #5a0e8b;
        }

        .action-links a {
            color: #6f42c1; /* Roxo para os links de ação */
            font-weight: 500;
            transition: color 0.3s ease;
            text-decoration: none;
        }

        .action-links a:hover {
            color: #5a0e8b; /* Roxo mais escuro no hover */
            text-decoration: underline;
        }

        /* Margem para o botão de criar novo item */
        .create-new {
            display: block;
            text-align: right;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <p class="create-new">
            <a asp-action="Create" class="btn btn-primary">Criar novo</a>
        </p>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Nome do Produto
                    </th>
                    <th>
                        Preço
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Scripts do Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

